{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "if": {
        "properties": { "type": {"const": "struct" } }
    },
    "then": {
        "properties": { 
            "dataType": { "anyOf": [
                {"$ref": "/datatypes"},
                {"type": "string"}
            ]},
            "properties": {
                "type": "array",
                "items": { "$ref": "/struct/property" }
            },
            "description": {
                "type": "string"
            }
        },
        "required": ["properties"],
        "additionalProperties": true
    }
}