{
    "$id": "https://callFEELD.github.io/schema-test/schema/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",
    "patternProperties": {
        "^(?!universalis$)(?!meta$)(?!import$).*$": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": ["struct", "enum", "const"]
                }
            },
            "required": ["type"],
            "allOf": [
                { "$ref": "https://callFEELD.github.io/schema-test/schema/struct/struct.json" },
                { "$ref": "https://callFEELD.github.io/schema-test/schema/const/const.json"}
            ]
        }
    },
    "properties": {
        "universalis": {
            "anyOf": [
                { "$ref": "https://callFEELD.github.io/schema-test/schema/versions.json" }
            ]
        },

        "import": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "meta": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "required": [
        "universalis"
    ]
}