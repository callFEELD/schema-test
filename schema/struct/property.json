{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "anyOf": [
        {
            "$comment": "Short form of properties",
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "string"
                }
            }
        },
        {
            "$comment": "Long form of properties",
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "type": {"type": "string"},
                        "description": {"type": "string"},
                        "unit": {"type": "string"},
                        "range": {
                            "type": "array",
                            "minItems": 2,
                            "maxItems": 2,
                            "items": {
                                "anyOf": [
                                    {"type": "boolean"},
                                    {"type": "string"},
                                    {"type": "number"},
                                    {"type": "integer"}
                                ]
                            }
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": true
                }
            }
        }
    ]
}