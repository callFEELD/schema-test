{
    "$id": "https://callFEELD.github.io/schema-test/schema/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "$defs": {
        "dataTypes": {
            "enum": [
                "uint8", "int8",
                "uint16", "int16",
                "uint32", "int32",
                "uint64", "int64",
                "real32", "real64",
                "string", "bool"
            ]
        }
    },

    "type": "object",
    "patternProperties": {
        "^(?!universalis$)(?!meta$)(?!import$).*$": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": ["struct", "enum", "const"]
                },
                "description": {"type": "string"}
            },
            "required": ["type"],
            "allOf": [
                {
                    "if": {
                        "properties": { "type": {"const": "struct" } }
                    },
                    "then": {
                        "properties": { 
                            "dataType": {"type": "string"},
                            "properties": {
                                "type": "array",
                                "items": {
                                    "anyOf": [
                                        {
                                            "$comment": "Short form of properties",
                                            "type": "object",
                                            "patternProperties": {
                                                "^.*$": {
                                                    "anyOf": [
                                                        {"$ref": "#/$defs/dataTypes"},
                                                        {"type": "string"}
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "$comment": "Long form of properties",
                                            "type": "object",
                                            "patternProperties": {
                                                "^.*$": {
                                                    "type": "object",
                                                    "properties": {
                                                        "type": {
                                                            "anyOf": [
                                                                {"$ref": "#/$defs/dataTypes"},
                                                                {"type": "string"}
                                                            ]
                                                        },
                                                        "description": {"type": "string"},
                                                        "unit": {"type": "string"},
                                                        "range": {
                                                            "type": "array",
                                                            "minItems": 2,
                                                            "maxItems": 2,
                                                            "items": {
                                                                "anyOf": [
                                                                    {"type": "boolean"},
                                                                    {"type": "string"},
                                                                    {"type": "number"},
                                                                    {"type": "integer"}
                                                                ]
                                                            }
                                                        }
                                                    },
                                                    "required": ["type"],
                                                    "additionalProperties": true
                                                }
                                            }
                                        }
                                    ]
                                }
                            },
                            "description": {
                                "type": "string"
                            }
                        },
                        "required": ["properties"],
                        "additionalProperties": true
                    }
                },
                {
                    "if": {
                        "properties": { "type": {"const": "const" } }
                    },
                    "then": {
                        "properties": { 
                            "dataType": { "$ref": "#/$defs/dataTypes" },
                            "value": { "anyOf": [
                                {"type": "boolean"},
                                {"type": "string"},
                                {"type": "number"},
                                {"type": "integer"}
                            ]},
                            "description": {
                                "type": "string"
                            },
                            "unit": {
                                "type": "string"
                            }
                        },
                        "required": ["dataType", "value"],
                        "additionalProperties": true
                    }
                },
                {
                    "if": {
                        "properties": { "type": {"const": "enum" } }
                    },
                    "then": {
                        "properties": { 
                            "dataType": { "anyOf": [
                                {"$ref": "#/$defs/dataTypes"},
                                {"type": "string"}
                            ]},
                            "members": {
                                "type": "array",
                                "items": { 
                                    "anyOf": [
                                        {
                                            "$comment": "Short form of member",
                                            "type": "object",
                                            "patternProperties": {
                                                "^.*$": { 
                                                    "anyOf": [
                                                        {"type": "boolean"},
                                                        {"type": "string"},
                                                        {"type": "number"},
                                                        {"type": "integer"}
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "$comment": "Long form of member",
                                            "type": "object",
                                            "patternProperties": {
                                                "^.*$": {
                                                    "type": "object",
                                                    "properties": {
                                                        "value": { "anyOf": [
                                                            {"type": "boolean"},
                                                            {"type": "string"},
                                                            {"type": "number"},
                                                            {"type": "integer"}
                                                        ]},
                                                        "description": {"type": "string"}
                                                    },
                                                    "required": ["value"],
                                                    "additionalProperties": true
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "required": ["dataType", "members"],
                        "additionalProperties": true
                    }
                }
            ]
        }
    },
    "properties": {
        "universalis": {
            "enum": ["0.1"]
        },

        "import": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "meta": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "required": [
        "universalis"
    ]
}